<div
  x-show="intro"
  x-transition.duration.2000ms
  class="absolute inset-0 z-50 bg-gradient-to-b from-blue-900 to-blue-700 flex flex-col items-center justify-center gap-6 p-4"
>
  <!-- Audio oculto que se reproduce en loop -->
  <audio 
    x-ref="backgroundAudio" 
    loop
    class="hidden"
    src="/audio/octo-theme.mp3" 
  ></audio>
  
  <!-- Contenido animado -->
  <div class="animate-[bounce_2s_infinite] transform origin-bottom">
    <img
      src="/img/octo-alert.png"
      class="w-64 md:w-40 drop-shadow-[0_5px_5px_rgba(0,0,0,0.3)]"
      alt="Pulpo alerta"
    />
  </div>
  
  <!-- Mensaje con animación -->
  <h1 class="text-white text-2xl md:text-3xl font-bold text-center px-4 leading-snug animate-[pulse_2s_infinite]">
    <span class="octonauts-title block text-3xl md:text-4xl mb-2 text-yellow-300">¡Octoagente!</span>
    <span class="block">Estas Invitado</span>
  </h1>
  
  <!-- Efecto de burbujas decorativas -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute bottom-0 left-1/4 w-3 h-3 bg-white/30 rounded-full animate-[bubbleRise_4s_infinite]"></div>
    <div class="absolute bottom-0 left-1/2 w-4 h-4 bg-white/40 rounded-full animate-[bubbleRise_5s_infinite]"></div>
    <div class="absolute bottom-0 left-3/4 w-2 h-2 bg-white/20 rounded-full animate-[bubbleRise_6s_infinite]"></div>
  </div>
</div>
