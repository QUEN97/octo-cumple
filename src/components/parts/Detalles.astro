<div
                x-show="!mostrarMapa"
                x-transition
                class="p-2 relative overflow-visible"
            >
                <!-- Imagen principal centrada -->
                <div class="flex justify-center mb-3">
                    <img
                        src="/img/personaje-1.png"
                        class="w-64 md:w-80 animate-[float_4s_ease-in-out_infinite]"
                        alt="Personajes Octonautas"
                    />
                </div>

                <h2
                    class="text-3xl md:text-4xl font-extrabold octonauts-title mb-2 text-center animate-pulse"
                    style="color: #FFD700; 
