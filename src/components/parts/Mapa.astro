<div
  x-show="mostrarMapa"
  x-transition
  class="px-6 py-6 bg-gradient-to-br from-blue-800 to-blue-900 border-4 border-white rounded-3xl shadow-[0_8px_0_#002b3d] text-white relative overflow-visible"
  style="box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.3), 0 10px 10px -5px rgba(0, 0, 0, 0.1);"
>
  <!-- Decoraciones animadas -->
  <img
    src="/img/pepe.png"
    class="absolute -top-10 -right-10 w-28 animate-[floatBounce_4s_ease-in-out_infinite] z-30"
    alt="Pepe"
  />
  <img
    src="/img/naveA.png"
    class="absolute -bottom-8 -left-10 w-28 animate-[floatBounce_5s_ease-in-out_infinite] z-30"
    alt="Nave A"
  />
  
  <!-- Contenido principal -->
  <div class="relative z-10 space-y-4">
    <!-- Encabezado con icono -->
    <div class="flex flex-col items-center">
      <div class="bg-yellow-400 border-4 border-white rounded-full p-2 mb-2 animate-pulse">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-900" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
      </div>
      <h3 class="text-2xl font-bold octonauts-title text-yellow-300">Ubicación del Evento</h3>
    </div>

    <!-- Información de ubicación -->
    <div class="bg-white/10 backdrop-blur-sm border-2 border-white/30 rounded-xl p-4">
      <div class="flex items-start space-x-2 mb-2">
        <span class="text-2xl">🎉</span>
        <p class="text-lg font-bold">Salón Eventos Chac Kin</p>
      </div>
      <div class="flex items-start space-x-2">
        <span class="text-2xl">📍</span>
        <p class="text-base">Calle 46 No. 365 entre 163 y 163 A<br>Col. Plan de Ayala Sur.</p>
      </div>
    </div>

    <!-- Mapa interactivo -->
    <div class="rounded-xl overflow-hidden border-4 border-white shadow-lg transform hover:scale-[1.01] transition-transform duration-300">
      <iframe
        src="https://www.google.com/maps/embed?pb=!4v1754348804255!6m8!1m7!1sjn-IfSJra_L13yX3IF3TlQ!2m2!1d20.9081551942785!2d-89.61698137106907!3f278.97967346974434!4f-1.369557650141374!5f0.4000000000000002"
        width="100%"
        height="280"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        class="block"
      ></iframe>
    </div>

    <!-- Botones de acción -->
    <div class="flex flex-col sm:flex-row justify-center gap-3 mt-6">
      <a
        href="https://maps.app.goo.gl/Rv5RKAukSGGC7b9S8"
        target="_blank"
        class="bg-pink-500 hover:bg-pink-600 border-4 border-white text-white px-6 py-2 rounded-full text-sm font-bold shadow-[0_4px_0_#9f1239] hover:translate-y-[2px] transition-all flex items-center justify-center gap-2"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
        </svg>
        Ver en Google Maps
      </a>
      <button
        @click="mostrarMapa = false"
        class="bg-yellow-400 hover:bg-yellow-500 border-4 border-white text-blue-900 px-6 py-2 rounded-full text-sm font-bold shadow-[0_4px_0_#b45309] hover:translate-y-[2px] transition-all flex items-center justify-center gap-2"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Volver al Evento
      </button>
    </div>
  </div>
</div>